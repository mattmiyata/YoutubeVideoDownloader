<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="icon" type="image" href="favicon.ico" />

    <title>Download</title>
  </head>
  <body>

    <div class="container">
      <div class="header">
        <img src="/images/youfast-high-resolution-logo.png" width="300" height="200" />
      </div>
      <div>
        <iframe
          id="ytplayer"
          type="text/html"
          width="640"
          height="360"
          src="<%= url %>"
          frameborder="0"
        ></iframe>
      </div>

      <table>

          <th>Quality</th>
          <th>File Type</th>
          <th>Click to download!</th>
        </tr>
        <% info.forEach((format) => { %>
        <% if (!format.hasAudio || !format.hasVideo) return%>
          <tr>
          <th>
          <%= format.hasVideo ?
            `${format.qualityLabel}` : `${format.audioBitrate} kbps `%>
          </th>
          <th><%=format.container%></th>
          <th>
            <a href="/downloadFile?itag=<%-format.itag%>" class="download-button">Download</a>
          </th>

        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
